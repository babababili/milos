<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :asin %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :ship_price %>
    <%= f.input :rank %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
